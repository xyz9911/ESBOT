/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
page{
  background-color: #f5f5f5;
  height: 100%;
}




.input-box{
  padding: 0 10px;
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 50px;
  display: flex;
  align-items: center;
  border-top: 1px solid white;
}
.input-box input{
  flex: 2;
  padding-left: 20px;
  height: 30px;
  background-color: white;
  border-radius: 15px; 
}
.input-box text{

  width: 70px;
  text-align: center;
}
.input-box button{
  width: 70px;
  text-align: center;
  border-radius: 15px;
}

.list{
  overflow-y: auto;
  flex: 1;
}
.list .msg{
  font-size: 14px;
  display: flex;
  margin: 20px 10px;
}
.list .msg .text{
  flex: 1;
}
.list .msg .text .nickname{
  margin-bottom: 10px;
}
.list .msg .text .content{
  background-color: white;
  padding: 15px;
  border-radius: 0 10px 10px 10px;
  display: inline-block;
  max-width: 150px;
}

